<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/padrao_background">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginStart="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pessoa_perfil_padrao" />
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/padrao"
            android:textColor="@color/white"
            android:text="@string/nome_do_individuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="550dp"
        android:orientation="vertical"
        android:background="@drawable/borda_branco_branco">
        <ListView
            android:id="@+id/lista_viagens"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="510dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="-51dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/adicionar"
        android:src="@drawable/icone_add_viagem" />
</LinearLayout>